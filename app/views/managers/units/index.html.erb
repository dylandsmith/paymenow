<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Managed Units for <%= @property.title %></h3>
  </div>
  <div class="panel-body">
    <% @units.each do |u| %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to u.address, managers_property_unit_path(u.property_id, u.id) %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="panel-footer">
      <%= link_to "Back to Properties", managers_properties_path %>
  </div>
</div>

<%= form_for :unit do |f|%>
  <%= f.label(:address, 'Unit Address') %>
  <%= f.text_field(:address, class: 'form-control') %>
  <%= f.submit('Add Unit', class: 'form-control') %>
<% end %>