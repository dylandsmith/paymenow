<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Edit Unit Address</h3>
  </div>
  <div class="panel-body">
    <%= form_for :unit, method: 'patch' do |f|%>
      <%= f.label(:address, 'Unit Address') %>
      <%= f.text_field(:address, class: 'form-control') %>
      <%= f.submit('Update Unit', class: 'form-control') %>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Remove Unit</h3>
  </div>
  <div class="panel-body">
    <%= form_for :unit, method: 'delete' do |f|%>
      <%= f.submit('Delete Unit', class: 'form-control') %>
    <% end %>
  </div>
</div>